[flake8]
# Maximum line length (changed to 120)
max-line-length = 120

# ...other settings...
extend-select = X303

# Ignore specific errors/warnings:
# E501: Line too long
# W503: Line break before binary operator
# D100-D104: Missing docstring
# E203: Whitespace before ':'
# R101: Too many local variables
# E301-E306: Blank line errors (using custom blank line rules)
# E303: Too many blank lines (use our custom X303 instead)
# E712: Comparison to True/False (explicitly testing bool values)
ignore =
    E501,
    W503,
    D100, D101, D102, D103, D104,
    E203,
    R101,
    E301,
    E302,
    E303,
    E304,
    E305,
    E306,
    E712,

# Exclude specific directories/files
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv

# Plugins:
# Uncomment to enable docstring checker
# enable-extensions = G

# Per-file-ignores
# You can ignore specific errors for specific files:
per-file-ignores =
    mytower/game/entities/entities_protocol.py:E704
    mytower/game/core/units.py:E704
    mytower/tests/conftest.py:E704
    mytower/tests/test_utilities.py:E704
