{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        

        {
            "name": "MyTower: Desktop (with Debug Logging)",
            "type": "debugpy",
            "request": "launch",
            "module": "mytower.main",
                "args": ["--log-level", "DEBUG", "--log-file", "logs/mytower", "--file-log-level", "DEBUG"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MyTower: Desktop Demo",
            "type": "debugpy",
            "request": "launch",
            "module": "mytower.main",
                "args": ["--demo", "--log-file", "logs/mytower", "--file-log-level", "DEBUG"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MyTower: Hybrid Mode (Desktop + GraphQL)",
            "type": "debugpy",
            "request": "launch",
            "module": "mytower.main",
                "args": ["--with-graphql", "--demo", "--port", "8000", "--log-file", "logs/mytower", "--file-log-level", "DEBUG"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MyTower: Headless Mode",
            "type": "debugpy",
            "request": "launch",
            "module": "mytower.main",
                "args": ["--headless", "--demo", "--log-file", "logs/mytower", "--file-log-level", "DEBUG"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MyTower: Headless + GraphQL",
            "type": "debugpy",
            "request": "launch",
            "module": "mytower.main",
                "args": ["--headless", "--with-graphql", "--demo", "--port", "8000", "--log-file", "logs/mytower", "--file-log-level", "DEBUG"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "MyTower: Attach to Hybrid (GraphQL Thread)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        },
        {
            "name": "Start Vite Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/web/node_modules/vite/bin/vite.js",
            "args": ["--host"],
            "cwd": "${workspaceFolder}/web",
            "console": "integratedTerminal",
            "runtimeExecutable": "node",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/web/dist/**/*.js"]
        }
    ]
}
