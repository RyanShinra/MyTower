[MESSAGES CONTROL]
disable=all
enable=
    # Type checking
    no-member,
    not-callable,
    unexpected-keyword-arg,
    
    # OOP best practices
    protected-access,
    useless-super-delegation,
    no-self-use,
    super-init-not-called,
    
    # Error prevention
    undefined-variable,
    used-before-assignment,
    unused-variable,
    unused-import,
    
    # Code quality
    too-many-arguments,
    too-many-instance-attributes,
    too-few-public-methods,
    
    # Typing
    invalid-name,

[BASIC]
good-names=i,j,k,ex,_,fd

# Allow UPPER_CASE naming for constant-like attributes (like in protocols)
attr-rgx=[a-z_][a-z0-9_]{2,30}$|^[A-Z_][A-Z0-9_]{2,30}$

# Allow UPPER_CASE property names in protocols
property-classes=property